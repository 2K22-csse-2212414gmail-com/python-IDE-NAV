  <div id="editor" style="width:800px;height:400px;border:1px solid #ccc;margin-top:10px;"></div>
<script>
require.config({ paths: { 'vs': 'https://cdn.jsdelivr.net/npm/monaco-editor@0.41.0/min/vs' }});

require(['vs/editor/editor.main'], function () {
    window.editor = monaco.editor.create(document.getElementById('editor'), {
        value: "# Write Python code here\nprint('Hello World')",
        language: 'python',    // change to 'javascript', 'cpp', etc.
        theme: 'vs-dark',
        automaticLayout: true
    });
});

function toggleDarkMode() {
   document.body.classList.toggle("dark-mode");
}

const getEditorCode = () => (window.editor && typeof window.editor.getValue === 'function') ? window.editor.getValue() : document.getElementById("code-editor").value;

const code = getEditorCode();
console.log(code);

async function runCode() {
    const code = getEditorCode();

    const res = await fetch("http://localhost:8000/run", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ code: code, input: "" })
    });

    const data = await res.json();
    console.log(data.output);
}


// Connect buttons to backend
document.getElementById("run-code-btn").addEventListener("click", async () => {
    const code = getEditorCode();
    const res = await fetch("http://127.0.0.1:8000/run", {
        method: "POST",
        headers: {"Content-Type": "application/json"},
        body: JSON.stringify({ code })
    });
    const data = await res.json();
    document.getElementById("output-console").textContent = data.output;
});

document.getElementById("evaluate-code-btn").addEventListener("click", async () => {
    const code = getEditorCode();
    const res = await fetch("http://127.0.0.1:8000/evaluate", {
        method: "POST",
        headers: {"Content-Type": "application/json"},
        body: JSON.stringify({ code, problem_id: 1 })
    });
    const data = await res.json();
    document.getElementById("output-console").textContent = `${data.verdict}\n${data.passed} test cases passed`;
});
  



  // Run Button Function
async function runCode() {
    const code = editor.getValue();  // get code from editor

    try {
        const res = await fetch("http://localhost:8000/run", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ code: code, input: "" })  // input can be empty
        });

        const data = await res.json();
        document.getElementById("output").innerText = data.output || data.error;
    } catch (err) {
        document.getElementById("output").innerText = "Error connecting to backend!";
        console.error(err);
    }}
</script>
